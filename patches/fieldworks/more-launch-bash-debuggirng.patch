+[[ -z ${FW_DEBUG} ]] || set +x
+
 scriptdir=$(dirname "$0")
 prefix=$(cd "$scriptdir/../.."; /bin/pwd)
 lib=$prefix/lib/fieldworks
diff --git a/Lib/linux/setup-user b/Lib/linux/setup-user
index ad067cd7..1ec76e2e 100755
