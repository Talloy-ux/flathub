diff --git a/Lib/linux/fieldworks-flex b/Lib/linux/fieldworks-flex
index 844d22c6..9376a990 100755
--- a/fw/Lib/linux/fieldworks-flex
+++ b/fw/Lib/linux/fieldworks-flex
@@ -1,4 +1,6 @@
 #!/bin/sh
 
+[[ -z ${FW_DEBUG} ]] || set +x
+
 script_location=$(dirname "$0")
 exec "${script_location}/../lib/fieldworks/run-app" FieldWorks.exe -app Flex "$@"
diff --git a/Lib/linux/run-app b/Lib/linux/run-app
index c739ccb1..ad0eeb2c 100755
