 if [ "$RUNMODE" != "PACKAGING" ]
 then
 	if [[ $(/sbin/ldconfig -N -v $(sed 's/:/ /g' <<< $LD_LIBRARY_PATH) 2>/dev/null | grep libgeckofix.so | wc -l) > 0 ]]; then
-		LD_PRELOAD=libgeckofix.so
+		export LD_PRELOAD=libgeckofix.so
 	fi
 fi
 
